<mvc:View
	controllerName="C23C249.invoices.controller.HelloPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true"
>
	<Panel
		id="_IDGenPanel1"
		headerText="{i18n>helloPanel}"
		class="sapUiResponsiveMargin"
	>
		<content>
					<Button
				icon="sap-icon://action"
				id="_IDGenButton2"
				text="{i18n>showHelloDialogText}"
				press=".onShowDialog"
				class="sapUiSmallMarginEnd"
			/>
			<Button
				id="_IDGenButton1"
				text="{i18n>showHelloButtonText}"
				press=".onShowHello"
				class="sapUiSmallMarginEnd"
			/>
			<Input
				id="_IDGenInput1"
				valueLiveUpdate="true"
				width="60%"
				value="{/recipient/name}"
			/>
			<Text
				id="_IDGenText1"
				text="Hello {/recipient/name}"
				class="sapUiSmallMargin boldElements"
			/>
		</content>
	</Panel>
	<core:Fragment
		fragmentName="C23C249/invoices/view/Form01"
		type="XML"
	/>
</mvc:View>