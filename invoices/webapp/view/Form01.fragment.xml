		headerText="{i18n>panelFrTtitle}"
		class="sapUiResponsivemargin"
		width="50%"
	>
		<f:SimpleForm>
			<f:content>
				<Label
					text="{i18n>labelPerson}"
					labelFor="persName"
				/>
